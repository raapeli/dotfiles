bindsym $mod+Shift+x exec i3lock 
bindsym $mod+Shift+f exec firefox 
bindsym $mod+Shift+s exec speedcrunch
bindsym $mod+w       exec st zsh -c ranger

#exec feh --bg-scale ~/Pictures/fill.png 
bindsym $mod+Shift+w exec ~/scripts/walls.sh

