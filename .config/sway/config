bindsym $mod+Shift+f exec firefox
bindsym $mod+w       exec st ranger
bindsym $mod+Shift+x exec swaylock

exec ~/.config/scripts/wallpapersetter.sh
bindsym $mod+Shift+w exec ~/.config/scripts/wallpapersetter.sh

# Startup daemons for compositor and status bar
exec_always --no-startup-id pkill dunst; dunst
exec_always --no-startup-id waybar
exec --no-startup-id firefox
